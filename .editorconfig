root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[{*.{c,dts,dtsi,dtso,h,mk,s,S},Makefile,Makefile.*}]
indent_style = tab
indent_size = 8

[*.{json,py,rs}]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2
